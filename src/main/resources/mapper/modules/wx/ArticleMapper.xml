<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.justdo.modules.wx.article.mapper.ArticleMapper">
    <cache-ref namespace="com.justdo.modules.wx.article.mapper.ArticleMapper"/>

    <update id="addOpenCount">
        UPDATE wx_article SET open_count=open_count+1 WHERE id=#{id}
    </update>
</mapper>